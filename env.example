# Application Configuration
APP_NAME=HealthLang AI MVP
APP_VERSION=0.1.0
DEBUG=false
ENVIRONMENT=development

# Server Configuration
HOST=0.0.0.0
PORT=8000
WORKERS=4
RELOAD=false

# API Keys and External Services
GROQ_API_KEY=your_real_groq_api_key_here
GROQ_BASE_URL=https://api.groq.com/openai/v1
XAI_GROK_API_KEY=your_real_xai_grok_api_key_here
XAI_GROK_BASE_URL=https://api.x.ai/v1
LOCAL_MODEL_ENDPOINT=

# Database Configuration
DATABASE_URL=sqlite:///./healthlang.db
REDIS_URL=redis://localhost:6379/0
CHROMA_DB_PATH=./data/medical_knowledge/embeddings

# LLM Configuration
LLM_PROVIDER=groq
GROQ_MODEL=llama-3-8b-8192
OPENAI_MODEL=gpt-3.5-turbo
LOCAL_MODEL=llama-3-8b
LLM_TIMEOUT=30

# GPU Configuration
USE_GPU=false
USE_MPS=false

# Additional Embedding Models
ADDITIONAL_EMBEDDING_MODELS=

# Vector Database Configuration
VECTOR_DB_TYPE=chroma  # Options: chroma, faiss
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2
CHUNK_SIZE=1000
CHUNK_OVERLAP=200
CHROMA_PERSIST_DIRECTORY=./data/chroma

# Translation Configuration
TRANSLATION_MODEL_PATH=./data/models/translation
TRANSLATION_MODEL=meta-llama/Llama-4-Maverick-17B-128E-Instruct
TRANSLATION_PROVIDER=groq

# Medical Analysis Configuration
MEDICAL_MODEL_NAME=grok-beta
MEDICAL_MODEL_PROVIDER=xai
MAX_TOKENS=2048
TEMPERATURE=0.1
TOP_P=0.9

# RAG Configuration
RAG_ENABLED=true
MAX_RETRIEVAL_DOCS=3
SIMILARITY_THRESHOLD=0.75
KNOWLEDGE_BASE_PATH=./data/medical_knowledge/processed

# Security Configuration
SECRET_KEY=your_secret_key_here_change_in_production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
CORS_ORIGINS=http://localhost:3000,http://localhost:8000

# Rate Limiting
RATE_LIMIT_PER_MINUTE=120
RATE_LIMIT_PER_HOUR=2000

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE=./logs/healthlang.log

# Monitoring Configuration
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000

# Cache Configuration
CACHE_TTL=7200  # 2 hours
CACHE_MAX_SIZE=2000

# File Upload Configuration
MAX_FILE_SIZE=10485760  # 10MB
ALLOWED_FILE_TYPES=pdf,docx,txt,md

# Medical Knowledge Sources
MEDICAL_SOURCES_PATH=./data/medical_knowledge/raw
WHO_GUIDELINES_URL=https://www.who.int/health-topics
CDC_GUIDELINES_URL=https://www.cdc.gov/healthcommunication

# MCP Configuration
MCP_ENABLED=true
MCP_HEALTHCARE_SERVER_PATH=./mcp_servers/healthcare_server.py
MCP_TIMEOUT=30

# Testing Configuration
TESTING=false
TEST_DATABASE_URL=sqlite:///./test_healthlang.db
MOCK_GROQ_RESPONSES=true

# Docker Configuration
DOCKER_IMAGE_NAME=healthlang-ai-mvp
DOCKER_TAG=latest
DOCKER_REGISTRY=your-registry.com

# Kubernetes Configuration
K8S_NAMESPACE=healthlang
K8S_REPLICAS=3
K8S_RESOURCE_LIMITS_CPU=1000m
K8S_RESOURCE_LIMITS_MEMORY=2Gi
K8S_RESOURCE_REQUESTS_CPU=500m
K8S_RESOURCE_REQUESTS_MEMORY=1Gi 